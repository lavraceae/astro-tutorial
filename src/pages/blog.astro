---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';

const allPosts = await getCollection('blog');

const titleWithOrdinal = (post) => `${post.data.ordinal} ${post.data.title}`;
---

<BaseLayout pageTitle="Blog">
		<h2>I will upload content related to my Astro journey in this section ⊹ ࣪ ˖</h2>
		<ul>
			{allPosts.map((post) => (
				<BlogPost url={`/posts/${post.id}/`} title={titleWithOrdinal(post)} />
			))}
		</ul>
</BaseLayout>
